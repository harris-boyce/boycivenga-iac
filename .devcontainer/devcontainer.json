{
  "name": "IaC DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "ghcr.io/${localWorkspaceFolderBasename}/devcontainer:latest"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "bash -c 'set -e; pre-commit install 2>/dev/null || true; cd mcp-server && pip install -e . && echo \"âœ… MCP server installed successfully\"'",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "hashicorp.terraform",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one",
        "github.codespaces",
        "anthropic.claude-code"
      ]
    }
  },
  "remoteUser": "vscode"
}
