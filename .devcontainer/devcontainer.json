{
  "name": "IaC DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "ghcr.io/${localWorkspaceFolderBasename}/devcontainer:latest"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "pre-commit install 2>/dev/null || echo 'Info: pre-commit installed but not configured (add .pre-commit-config.yaml when ready)'",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "hashicorp.terraform",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one",
        "github.codespaces",
        "anthropic.claude-code"
      ]
    }
  },
  "remoteUser": "vscode"
}
